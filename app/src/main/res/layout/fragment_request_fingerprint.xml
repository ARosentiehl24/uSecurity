<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.arrg.android.app.usecurity.RequestFingerprintFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFingerprintSettingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="25dp"
                android:gravity="center"
                android:text="@string/fingerprint_setting_message"
                android:textColor="@color/white_glass75"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/dot_empty_background"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_fingerprint_white_48dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLogin"
            style="@style/ButtonBar"
            android:text="@string/enable_fingerprint_support" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="75dp" />
</LinearLayout>
